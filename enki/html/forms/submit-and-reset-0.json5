  card: {
    question: '<p>Write the form code that creates a reset button.</p>\n<p><code>&#x3C;??? ???="???" ???="Reset"></code></p>\n<p>Which line of code defines the button that sends the data when clicked?</p>\n<p>???</p>\n',
    answers: [
      {
        text: 'input',
      },
      {
        text: 'type',
      },
      {
        text: 'reset',
      },
      {
        text: 'value',
      },
      {
        text: '&lt;input type="submit" value="Send"&gt;',
      },
      {
        text: 'send',
      },
