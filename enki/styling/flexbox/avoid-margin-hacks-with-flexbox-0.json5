  card: {
    question: '<p>Which element should have <code>display: flex</code> property in order for the gutters to be equally distributed?</p>\n<p>???</p>\n',
    answers: [
      {
        text: 'The container.',
      },
      {
        text: 'Every column gutter.',
      },
      {
        text: 'Every column gutter but the first.',
      },
      {
        text: 'The html document.',
      },
    ],
